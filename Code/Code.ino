void setup() {
  Serial.begin(115200);  // Initialize serial communication at 9600 baud rate

  // Initialize OLED display
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("SSD1306 allocation failed"));
    for (;;); // Infinite loop
  }
  display.clearDisplay();
  display.setTextColor(WHITE);
  display.setCursor(0, 0);
  display.print(" LAUNCH 'CBPaint.exe'");
  display.drawBitmap(0, 10, Connect_computer_icon, 128, 48, WHITE);
  display.setCursor(0, 56);
  display.display();
}

void loop() {
  if (Serial.available() >= CHUNK_SIZE) {
    // Read data into buffer
    for (int i = 0; i < CHUNK_SIZE; i++) {
      buffer[i] = Serial.read();
    }

    display.drawBitmap(0, line, buffer, SCREEN_WIDTH, 2, WHITE);

    line= line + 2;
    if (line >= SCREEN_HEIGHT) {
      display.display();
      display.clearDisplay();
      line = 0; // Reset line position if it exceeds screen height
    }
  }
}
